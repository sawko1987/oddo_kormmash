<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Mobile-optimized Kanban view for masters -->
        <record id="view_workorder_mobile_kanban" model="ir.ui.view">
            <field name="name">mrp.workorder.mobile.kanban</field>
            <field name="model">mrp.workorder</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="product_id"/>
                    <field name="qty_production"/>
                    <field name="qty_produced"/>
                    <field name="responsible_id"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill" 
                                              t-attf-class="badge-#{record.state.raw_value === 'ready' ? 'info' : (record.state.raw_value === 'progress' ? 'success' : (record.state.raw_value === 'blocked' ? 'warning' : 'secondary'))}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><field name="product_id"/></div>
                                    <div>Qty: <field name="qty_production"/> / <field name="qty_produced"/></div>
                                    <div t-if="record.responsible_id.raw_value">
                                        <field name="responsible_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <!-- ВАЖНО: Кнопки работают только в мобильном браузере, не в официальном приложении -->
                                    <button name="button_start" string="Start" type="object" class="btn-primary" 
                                            invisible="state != 'ready'"/>
                                    <button name="button_finish" string="Finish" type="object" class="btn-success"
                                            invisible="state != 'progress'"/>
                                    <!-- Кнопка "Problem" будет добавлена позже через отдельное действие -->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action for masters to view their work orders -->
        <record id="action_workorder_master_view" model="ir.actions.act_window">
            <field name="name">My Work Orders</field>
            <field name="res_model">mrp.workorder</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('responsible_id', '=', uid), ('state', 'in', ['ready', 'progress', 'blocked'])]</field>
            <field name="context">{'search_default_my_workorders': 1}</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No work orders assigned to you.
                </p>
                <p>
                    <strong>Note:</strong> For full functionality, use mobile browser (PWA mode) 
                    instead of the official Odoo mobile app.
                </p>
            </field>
        </record>

        <!-- Menu for mobile access - будет добавлено позже -->
    </data>
</odoo>
